@using WebApplication13.Models
@model EditFurnitureViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAdd</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 jumbotron">
                <form method="post" action="/furniture/update">
                    <input type="hidden" name="id" value="@Model.Item.Id" />
                    <input type="text" value="@Model.Item.Name" name="name" placeholder="Name" class="form-control mt-2" />
                    <input type="text" value="@Model.Item.Color" name="color" placeholder="Color" class="form-control mt-2" />
                    <input type="text" value="@Model.Item.Price" name="price" placeholder="Price" class="form-control mt-2" />
                    <input type="text" value="@Model.Item.QuantityInStock" name="quantityinstock" placeholder="Quantity" class="form-control mt-2" />
                    <button class="btn btn-warning btn-block mt-2">Update</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
